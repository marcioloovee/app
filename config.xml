<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "br.com.sobralense"
    versionCode = "1"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only
  <preference name="Fullscreen" value="true" />
  <preference name="Orientation" value="portrait" />-->
  <content src="index.html" />
  
  <gap:plugin name="cordova-plugin-whitelist" spec="1.3.0" source="npm" />
  <gap:plugin name="cordova-plugin-camera" source="npm" />
  <gap:plugin name="onesignal-cordova-plugin" source="npm" />
  <gap:plugin name="cordova-plugin-facebookconnect-orlando" spec="0.11.0" source="npm">
    <param name="APP_ID" value="619707174856636" />
    <param name="APP_NAME" value="Sobralense" />
  </gap:plugin>

  <resources>
    <string name="fb_app_id">619707174856636</string>
    <string name="fb_app_name">Sobralense</string>
  </resources>

  <preference name="show-splash-screen-spinner" value="true" />
  <preference name="auto-hide-splash-screen" value="true" />
  <preference name="android-minSdkVersion" value="19" />
  <preference name="android-multiDexEnabled" value="true" />
  <preference name="android-installLocation" value="auto" />
  <preference name="android-permission" value="android.permission.WRITE_EXTERNAL_STORAGE" />
  <preference name="android-permission" value="android.permission.CAMERA" />

  <name>Sobralense</name>

  <description>
      Rede Social da Princesa do Norte!
  </description>
  
  <access origin="*" />

  <author href="https://www.portamil.com.br" email="contato@portamil.com.br">
    PortaMil
  </author>

  <icon src="./img/res/mipmap-mdpi/ic_launcher.png"   gap:platform="android"    gap:qualifier="mdpi" />
  <icon src="./img/res/mipmap-hdpi/ic_launcher.png"   gap:platform="android"    gap:qualifier="hdpi" />
  <icon src="./img/res/mipmap-xhdpi/ic_launcher.png" gap:platform="android" gap:qualifier="xhdpi" />

</widget>